
% reset enviornment
clear

% hyper-parameters
input_size = 1;
input_neurons = 2;
output_neurons = 1;


% create a neural network
r = neural_network;
r.initialize(input_size, input_neurons, @logsig);
r.add_layer(output_neurons, @purelin);

% pre-set intial weights & biases for layer 1
r.layers{1}.w = [-0.27 -0.41]';
r.layers{1}.b = [-0.48 -0.13]';

% pre-set intial weights & biases for layer 1
r.layers{2}.w = [0.09 -0.17];
r.layers{2}.b = [0.48];
r.layers{2}.n = 0;
r.layers{2}.a = 0;

r.train(1, 1, {{[1] 1+sin(pi/4)}});